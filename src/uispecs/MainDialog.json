// #package uispecs

// #section MainDialog

{
  "type": "sidebar",
  "bind": "sidebar",
  "children": [
    {
      "type": "tabs",
      "children": {
        "Data": {
          "type": "panel",
          "children": [
            {
              "type": "accordion",
              "bind": "volumeLoadContainer",
              "label": "Volume"
            },
            {
              "type": "accordion",
              "bind": "temporalVolumeLoadContainer",
              "label": "Temporal Volume"
            },
            {
              "type": "accordion",
              "bind": "envmapLoadContainer",
              "label": "Environment"
            }
          ]
        },
        "Settings": {
          "type": "panel",
          "children": [
            {
              "type": "accordion",
              "label": "Renderer",
              "children": [
                {
                  "type": "field",
                  "label": "Renderer:",
                  "children": [
                    {
                      "type": "dropdown",
                      "bind": "rendererSelect",
                      "options": [
                        {
                          "value": "mip",
                          "label": "Maximum intensity projection"
                        },
                        {
                          "value": "iso",
                          "label": "Isosurface extraction"
                        },
                        {
                          "value": "eam",
                          "label": "Emission-absorption model"
                        },
                        {
                          "value": "mcs",
                          "label": "Single scattering"
                        },
                        {
                          "value": "mcm",
                          "label": "Multiple scattering",
                          "selected": true
                        },
                        {
                          "value": "mcc",
                          "label": "Multiple scattering (compute)"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "panel",
                  "bind": "rendererSettingsContainer"
                }
              ]
            },
            {
              "type": "accordion",
              "label": "Tone mapper",
              "children": [
                {
                  "type": "field",
                  "label": "Tone mapper:",
                  "children": [
                    {
                      "type": "dropdown",
                      "bind": "toneMapperSelect",
                      "options": [
                        {
                          "value": "range",
                          "label": "Range"
                        },
                        {
                          "value": "reinhard",
                          "label": "Reinhard"
                        },
                        {
                          "value": "artistic",
                          "label": "Artistic",
                          "selected": true
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "panel",
                  "bind": "toneMapperSettingsContainer"
                }
              ]
            },
            {
              "type": "accordion",
              "bind": "renderingContextSettingsContainer",
              "label": "Context"
            },
            {
              "type": "accordion",
              "label": "Temporal Renderer",
              "children": [
                {
                  "type": "field",
                  "label": "Type:",
                  "children": [
                    {
                      "type": "dropdown",
                      "bind": "temporalRendererSelect",
                      "options": [
                        {
                          "value": "fixedtime",
                          "label": "Fixed time",
                          "selected": true
                        },
                        {
                          "value": "fixederror",
                          "label": "Fixed error"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "field",
                  "label": "Value:",
                  "children": [
                    {
                      "type": "spinner",
                      "bind": "temporalRendererValue",
                      "value": 1,
                      "min": 0
                    }
                  ]
                },
                {
                  "type": "field",
                  "children": [
                    {
                      "type": "button",
                      "bind": "startTemporalRendering",
                      "label": "Start rendering"
                    }
                  ]
                },
                {
                  "type": "field",
                  "children": [
                    {
                      "type": "progress-bar",
                      "bind": "temporalRenderingProgressBar"
                    }
                  ]
                },
                {
                  "type": "field",
                  "children": [
                    {
                      "type": "button",
                      "bind": "stopTemporalRendering",
                      "label": "Stop"
                    }
                  ]
                }
              ]
            },
            {
              "type": "accordion",
              "label": "Temporal Player",
              "children": [
                {
                  "type": "spacer",
                  "height": "10px"
                },
                {
                  "type": "frame-player",
                  "bind": "temporalRenderingPlayer"
                },
                {
                  "type": "spacer",
                  "height": "10px"
                }
              ]
            }
          ]
        },
        "About": {
          "type": "panel",
          "bind": "about"
        }
      }
    }
  ]
}